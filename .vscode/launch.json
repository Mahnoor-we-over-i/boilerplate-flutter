    "version": "0.2.0",
    "configurations": [
        {
            "name": "boilerplate - dev",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "dev",
                "--no-sound-null-safety"
            ]
        },
        {
            "name": "boilerplate - prod",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "prod",
                "--no-sound-null-safety"
            ]
        },
        {
            "name": "boilerplate - stg",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "stg",
                "--no-sound-null-safety"
            ]
        },
        {
            "name": "boiler_plate",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "boiler_plate (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "boiler_plate (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
